<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:columnCount="2"
    android:orientation="horizontal"
    android:paddingHorizontal="5dp"
    android:useDefaultMargins="true"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/view_model"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:text="@string/view_model" />

    <Button
        android:id="@+id/navigation"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:text="@string/navigation" />

    <Button
        android:id="@+id/retrofit"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:text="@string/retrofit" />

    <Button
        android:id="@+id/room"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:text="@string/room" />

    <Button
        android:id="@+id/work_manager"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:text="@string/work_manager" />

    <Button
        android:id="@+id/hilt_data_source"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:text="Hilt Data Source" />

    <Button
        android:id="@+id/hilt_repository"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:text="Hilt Repository" />
</GridLayout>